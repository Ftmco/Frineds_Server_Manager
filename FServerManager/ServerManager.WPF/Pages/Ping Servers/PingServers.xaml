<Page x:Class="ServerManager.WPF.Pages.Ping_Servers.PingServers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ServerManager.WPF.Pages.Ping_Servers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PingServers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Ping Servers" HorizontalContentAlignment="Center" FontSize="20" Foreground="White" Background="Gray"/>
        <Grid Grid.Row="1">
            <ListBox >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>               
                <ListBoxItem>
                    <StackPanel  Width="250">
                        <Label Content="Name"/>
                        <Label Content="Ip"/>
                        <ProgressBar Value="35" Height="25"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>
        </Grid>
    </Grid>
</Page>

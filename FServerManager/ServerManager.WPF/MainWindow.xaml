<Window x:Class="ServerManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ServerManager.WPF" 
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Button Content="Files" Width="40" x:Name="btnFile" Click="BtnFile_Click" HorizontalAlignment="Left" Margin="0,5,0,5">
                    <Button.ContextMenu>
                        <ContextMenu >
                            <MenuItem Header="Exit"/>
                            <MenuItem Header="Setting"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button Content="View" Width="40" x:Name="btnView" Click="BtnFile_Click" HorizontalAlignment="Left" Margin="42,5,0,5">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Exit"/>
                            <MenuItem Header="Setting"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button Content="Tools" x:Name="btnTools" Click="BtnFile_Click" Margin="85,5,0,5" HorizontalAlignment="Left" Width="40">
                    <Button.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Exit"/>
                            <MenuItem Header="Setting"/>
                        </ContextMenu>
                    </Button.ContextMenu>
                </Button>
                <Button x:Name="btnPoweShell" Click="BtnPoweShell_Click" Margin="129,5,131,5">
                    <Button.Content>
                        <Image x:Name="imgBtn" Source="Images/Console.png"/>
                    </Button.Content>
                </Button>
            </Grid>
            <Label Grid.Column="1" Content="F Server Manager" FontFamily="Andalus" HorizontalAlignment="Right" FontSize="15" />
        </Grid>
        <Grid Grid.Row="1">
            <TabControl>
                <TabItem Header="Monitoring">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="250" MaxWidth="350" MinWidth="150"/>
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" Foreground="Black" Width="5" HorizontalAlignment="Stretch"/>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" MaxHeight="200" MinHeight="100"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*" MaxHeight="200" MinHeight="100"/>
                            </Grid.RowDefinitions>
                            <GridSplitter Grid.Row="1" Foreground="Black"  HorizontalAlignment="Stretch"/>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Tasks" HorizontalContentAlignment="Center" Background="#FF3A3838" Foreground="White"/>
                                <ScrollViewer Grid.Row="1">

                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Row="2">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="25"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Label Content="Pings" HorizontalContentAlignment="Center" Background="#FF3A3838" Foreground="White"/>

                                <ScrollViewer Grid.Row="1">

                                </ScrollViewer>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Monitoring Servers Or Sites" HorizontalAlignment="Center" Grid.Row="0"/>
                            <Grid Grid.Row="1">


                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Controlles">

                </TabItem>

            </TabControl>
        </Grid>
        <Grid Grid.Row="2">
            <Label x:Name="lblTime" Content="Time" HorizontalAlignment="Left"/>
            <Label x:Name="lblConnect" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
